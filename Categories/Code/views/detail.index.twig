{# empty Twig template #}
{% import "form.macro.twig" as forms %}

{{ set_assets('applications/Businesses/assets/css/business.css') }}

{{ set_assets('applications/Businesses/assets/js/business.js') }}
{{ set_assets('applications/Businesses/assets/js/jquery.elevatezoom.js') }}

<h1>{{ item.title }}</h1>

<div class="business-posted-date">
    <i class="fa fa-clock-o"></i> Posted:  {{ item.date_created|date('d M Y H:i:s') }} &nbsp;&nbsp;
</div>

<div>

    <div class="form-group">
        <label>Description</label><br>
        {{ item.description }}
    </div>

</div>

<div> 
    <div class="clearfix"></div>
    <h3> Featured Business</h3>
    <hr>
    {% include "business.list.twig" ignore missing with {'category_id': item.id, 'action': 'featured'}  %}
    <div class="clearfix"></div>
    <br>
</div>

<div> 
    <div class="clearfix"></div>
    <h3>Latest Business</h3>
    <hr>
    {% include "business.list.twig" ignore missing with {'category_id': item.id, 'action': 'latest'}  %}
    <div class="clearfix"></div>
    <br>
</div>

<div> 
    <div class="clearfix"></div>
    <h3>Popular Business</h3>
    {% include "business.list.twig" ignore missing with {'category_id': item.id, 'action': 'popular'}  %}
    <div class="clearfix"></div>
    <br>
</div>

